<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/ivMessage"
        android:src="@drawable/ic_message"
        android:layout_width="64sp"
        android:layout_height="64dp"/>

    <TextView
        android:id="@+id/tvTitle"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="16sp"
        android:layout_marginStart="18sp"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@id/ivMessage"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/roboto_medium"
        android:textSize="20sp"
        tools:text="Tổng hợp tin tức thời sự"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvContent"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="6sp"
        android:layout_marginEnd="40dp"
        android:layout_alignStart="@id/tvTitle"
        android:layout_below="@+id/tvTitle"
        android:fontFamily="@font/roboto_regular"
        android:textSize="16sp"
        tools:text="Tổng hợp tin tức thời sự nóng hổi nhất, của tất cả các ..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="#E1DFDF"
        android:layout_alignStart="@id/tvContent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ivMessage"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>
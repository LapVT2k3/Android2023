<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".btvn_b8.B8Screen1Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarManage"
        android:background="#FFDF40"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:id="@+id/titleManage"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:fontFamily="@font/roboto_bold"
            android:text="Quản lý sinh viên"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rlAdd"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        
        <TextView
            android:id="@+id/tvAddIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="14dp"
            android:background="@drawable/add_background"
            android:textColor="#1F9FFC"
            android:gravity="center"
            android:textSize="30sp"
            android:text="+"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <TextView
            android:id="@+id/tvAdd"
            app:layout_constraintStart_toEndOf="@+id/tvAddIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Thêm sinh viên mới"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="20sp"
            android:textColor="#1F9FFC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvData"
        android:layout_margin="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</LinearLayout>
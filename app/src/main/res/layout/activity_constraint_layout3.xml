<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstraintLayoutActivity3">

    <View
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vImage2"
        android:id="@+id/vImage1"
        android:background="#C4C4C4"
        android:layout_width="0dp"
        android:layout_height="156dp" />

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/vImage1"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/vImage2"
        android:background="#813434"
        android:layout_width="0dp"
        android:layout_height="156dp" />

    <View
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vImage1"
        android:id="@+id/vImage3"
        android:background="#260D0D"
        android:layout_width="96dp"
        android:layout_height="165dp" />

    <View
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vImage3"
        app:layout_constraintTop_toBottomOf="@id/vImage3"
        android:id="@+id/vImage4"
        android:background="#9DC8C0"
        android:layout_width="0dp"
        android:layout_height="165dp" />

    <View
        app:layout_constraintStart_toEndOf="@id/vImage4"
        app:layout_constraintTop_toBottomOf="@id/vImage3"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/vImage5"
        android:background="#531F1F"
        android:layout_width="0dp"
        android:layout_height="83dp" />

    <View
        app:layout_constraintTop_toBottomOf="@id/vImage4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vImage4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/vImage6"
        android:background="#C4C4C4"
        android:layout_width="0dp"
        android:layout_height="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
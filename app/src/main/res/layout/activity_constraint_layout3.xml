<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstraintLayoutActivity3">

    <View
        android:id="@+id/vImage1"
        android:layout_width="0dp"
        android:layout_height="156dp"
        android:background="#C4C4C4"
        app:layout_constraintEnd_toStartOf="@id/vImage2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vImage2"
        android:layout_width="0dp"
        android:layout_height="156dp"
        android:background="#813434"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vImage1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vImage3"
        android:layout_width="96dp"
        android:layout_height="166dp"
        android:background="#260D0D"
        app:layout_constraintStart_toEndOf="@id/gl1"
        app:layout_constraintTop_toBottomOf="@id/vImage1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl1"
        android:orientation="vertical"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.3333" />

    <View
        android:id="@+id/vImage4"
        android:layout_width="0dp"
        android:layout_height="166dp"
        android:background="#9DC8C0"
        app:layout_constraintEnd_toStartOf="@id/gl1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vImage3" />

    <View
        android:id="@+id/vImage5"
        android:layout_width="0dp"
        android:layout_height="83dp"
        android:background="#531F1F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/gl1"
        app:layout_constraintTop_toBottomOf="@id/vImage3" />

    <View
        android:id="@+id/vImage6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#C4C4C4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vImage4"
        app:layout_constraintTop_toBottomOf="@id/vImage4" />

</androidx.constraintlayout.widget.ConstraintLayout>